 node('ppcle') {

    JDK_FOLDER = "jdk"
	RELEASE = "linux-ppc64le-normal-server-release"
	JAVA_BIN = "${WORKSPACE}/build/${RELEASE}/images/${JDK_FOLDER}/bin"
    SPEC = 'linux_ppc-64_cmprssptrs_le'
    JAVA_VERSION = 'SE90'
    TEST_TARGET = 'sanity'

    checkout scm
    def buildfile = load "${WORKSPACE}/buildenv/jenkins/test"
    buildfile.fetch_artifacts_for_test()
    buildfile.test()
}
