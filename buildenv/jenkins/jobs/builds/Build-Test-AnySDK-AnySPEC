#!groovyâ€‹

if (!params.SDK_VERSION) {
    error("Must set SDK_VERSION as a job parameter")
}

if (!params.SPEC) {
    error("Must set SPEC as a job parameter")
}

if (!params.TEST_TARGET) {
    error("Must set a test target")
}

SDK_VERSION = params.SDK_VERSION
SPEC = params.SPEC
TEST_TARGET = params.TEST_TARGET

timeout(time: 8, unit: 'HOURS') {
    node('master') {
        timestamps {
            try{
                retry(5) {
                    checkout scm
                }
                variableFile = load 'buildenv/jenkins/common/variables-functions'
                variableFile.set_job_variables('build')
                buildfile = load 'buildenv/jenkins/common/build'
            } finally {
                cleanWs()
            }
        }
    }

    node("${NODE}") {
        timestamps {
            buildfile.build_all()

            // PR Builds run testing on the same node.
            if (TEST_TARGET != 'none') {
                testfile = load 'openj9/buildenv/jenkins/common/test'
                testfile.test_all()
            }
        }
    }
}
