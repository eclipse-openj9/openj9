	</test>

	<test id="Run !flatobject $arrayIndex1Addr$ to recursively show the contents of the object">
		<command command="$JDMPVIEW_EXE$">
			<arg>-core $DUMPFILE$</arg>
			<input>!flatobject $arrayIndex1Addr$</input>
