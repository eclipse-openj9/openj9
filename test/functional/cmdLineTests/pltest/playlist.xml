	-DEXE=$(SQ)cmd /C start /B /wait /affinity 1 run_pltest.bat &gt; j9numcpus.txt 2&gt;&amp;1$(SQ) -jar $(CMDLINETESTER_JAR) \
	-config $(Q)$(TEST_RESROOT)$(D)pltest_numcpus_bound.xml$(Q) -verbose -explainExcludes \
