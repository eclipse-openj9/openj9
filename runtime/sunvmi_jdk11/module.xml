<module xmlns:xi="http://www.w3.org/2001/XInclude">

	<!--  This library contains the implementation of SunVMI vm-specific natives
		which will eventually be linked with the JCL library. -->
	<artifact type="static" name="sunvmi_jdk11">
		<include-if condition="spec.flags.opt_sidecar or spec.flags.opt_harmony" />
		<phase>core quick j2se</phase>
		<flags>
			<flag name="J9VM_JCL_SE11"/>
		</flags>
		<includes>
			<include path="j9include"/>
			<include path="j9oti"/>
			<include path="j9gcgluejava"/>
			<include path="jcl"/>
			<include path="$(OMR_DIR)/gc/include" type="relativepath"/>
		</includes>		
		<makefilestubs>
			<makefilestub data="UMA_TREAT_WARNINGS_AS_ERRORS=1"/>
		</makefilestubs>
		<vpaths>
			<vpath pattern="sunvmi.c" path="../sunvmi" augmentObjects="true" type="relativepath"/>
			<vpath pattern="ut_sunvmi.c" path="../sunvmi" augmentObjects="true" type="relativepath"/>
		</vpaths>
	</artifact>

</module>
